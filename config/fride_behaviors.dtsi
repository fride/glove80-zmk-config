behaviors {

    magic: magic_hold_tap {
            compatible = "zmk,behavior-hold-tap";
            label = "MAGIC_HOLD_TAP";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <200>;
            bindings = <&mo>, <&rgb_ug_status_macro>;
    };

    // Home Row Mods
    hmr: homerow_mods_right { // use on right hand to mod left
        compatible = "zmk,behavior-hold-tap";
        label = "homerow_mods_right";
        #binding-cells = <2>;
        tapping-term-ms = <my_tapping_term>;
        flavor = "balanced";
        bindings = <&kp>, <&kp>;
        hold-trigger-key-positions = <LEFT_HAND_KEYS THUMB_KEYS>; // left hand allowed
    };

    hml: homerow_mods_left { // use on left hand to mod right
        compatible = "zmk,behavior-hold-tap";
        label = "homerow_mods_left";
        #binding-cells = <2>;
        tapping-term-ms = <my_tapping_term>;
        flavor = "balanced";
        bindings = <&kp>, <&kp>;
        hold-trigger-key-positions = <RIGHT_HAND_KEYS_M THUMB_KEYS>; // right hand allowed but  not magic!
    };

    hrm_d: hrm_d {
        compatible = "zmk,behavior-hold-tap";
        label = "hrm_d";
        #binding-cells = <2>;
        bindings = <&kp>, <&ak_d>;
        flavor = "balanced";
        tapping-term-ms = <280>;
        quick-tap-ms = <175>;                // repeat on tap-into-hold
        require-prior-idle-ms = <150>;
        hold-trigger-key-positions = <RIGHT_HAND_KEYS_M THUMB_KEYS>; // right hand allowed
        hold-trigger-on-release;             // delay positional check until key-release
    };

